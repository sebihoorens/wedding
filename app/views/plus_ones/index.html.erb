<%= render partial: 'guests/leader' %>
<div class="container">
  <div class="row">
    <div class="offset-lg-2 col-lg-8">
      <%= render partial: 'guests/rsvp_nav', locals: { active: 2 } %>

      <h2><%= t('rsvp.plus_ones_title') %></h2>
      <p><%= t('rsvp.plus_ones_let_us_know') %></p>
      <p>&nbsp;</p>

      <% if @plus_ones.any? %>
        <%= render @plus_ones %>
      <% else %>
        <p><%= t('rsvp.plus_ones_none_yet') %></p>
      <% end %>
      <p>
        <%= link_to t('rsvp.plus_ones_add'), new_guest_plus_one_path(@guest), class: 'btn btn-primary', data: { disable_with: t('rsvp.loading') } %>
      </p>

      <p>&nbsp;</p>
      <p class="guests-buttons">
        <%= link_to t('rsvp.continue'), confirm_guest_path(@guest), class: 'btn btn-primary' %>
      </p>
    </div>
  </div>
</div>
